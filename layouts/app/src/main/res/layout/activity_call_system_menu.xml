            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="@style/myButton"
                android:text="call app list(usable)"
                android:onClick="@{() -> activity.callUsableAppList()}"/>

<!--            <Button-->
<!--                style="@style/myButton"-->
<!--                android:text="call share"-->
<!--                android:onClick="@{() -> activity.callShare()}"/>-->
        </LinearLayout>

